# Server Configuration Environment Variables
# Copy this file to .env and update with your actual values

# User Configuration (customize for your setup)
USERNAME=ubuntu
SSH_PORT=22

# SSH Keys (REQUIRED - replace with your actual public keys)
# You can use the same key for both, or different keys for separation
# If you only have one SSH key, use it for both variables
PERSONAL_SSH_KEY=""
CONTROL_PLANE_SSH_KEY=""

# Network Configuration (for worker nodes)
CONTROL_PLANE_IP=""

# Service Ports (customize as needed)
CONTROL_PLANE_UI_PORT=3000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Fail2ban Configuration (standard defaults)
FAIL2BAN_FINDTIME=600
FAIL2BAN_MAXRETRY=5
FAIL2BAN_BANTIME=600

# SSH Security Settings (standard OpenSSH defaults)
SSH_MAX_AUTH_TRIES=6
SSH_CLIENT_ALIVE_INTERVAL=0
SSH_CLIENT_ALIVE_COUNT_MAX=3
SSH_MAX_STARTUPS=10
SSH_LOGIN_GRACE_TIME=120
